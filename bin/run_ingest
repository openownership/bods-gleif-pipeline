#!/usr/bin/env python3
import os
import time
from datetime import datetime
from pathlib import Path

def run(entry, stage):
    start = time.time()
    print("Start time:", datetime.fromtimestamp(start).strftime("%c"))
    entry(stage)
    end = time.time()
    print("Execution time:", end - start)

def pipeline():
    os.chdir('/app')
    Path('data').mkdir(exist_ok=True)
    from bodspipelines.pipelines.gleif import config
    run(config.pipeline.process, "ingest")

if __name__ == "__main__":
    pipeline()
